@model onlinecarrer.Models.Companylogin

@{
    ViewBag.Title = "LoginEmpVal";
    Layout = "~/Views/Shared/_Masterlayout.cshtml";
}

<h2>LoginEmpVal</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 align="center">
            <font face="Lato" color="Red" size="8">Company Login</font>
        </h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.comapnyid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.comapnyid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comapnyid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.compPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.compPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.compPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-success btn-block" />
            </div>
        </div>
    </div>
}


